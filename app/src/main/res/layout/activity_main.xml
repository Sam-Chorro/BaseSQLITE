<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:layout_marginTop="22sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="Codigo"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        />

    <EditText
        android:drawableStart="@drawable/ic_baseline_note_add_24"
        android:layout_marginTop="12sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="Descripcion"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        />

    <EditText
        android:drawableStart="@drawable/ic_baseline_monetization_on_24"
        android:layout_marginTop="12sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Precio"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:id="@+id/edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        />

    <Button
        android:drawableLeft="@drawable/ic_baseline_save_24"
        android:backgroundTint="#16EF21"
        app:cornerRadius="22sp"
        android:layout_marginTop="12sp"
        android:id="@+id/btn1"
        android:layout_gravity="center"
        android:padding="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:onClick="registrar"
        />
    <Button
        android:backgroundTint="@color/white"
        android:layout_marginTop="12sp"
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="12sp"
        app:cornerRadius="22sp"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:drawablePadding="22sp"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:onClick="buscar"
        />
    <Button
        android:drawableLeft="@drawable/ic_baseline_autorenew_24"
        android:backgroundTint="@color/black"
        android:layout_marginTop="12sp"
        android:padding="12sp"
        android:layout_gravity="center"
        app:cornerRadius="22sp"
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:onClick="modificar"
        />
    <Button
        android:drawableLeft="@drawable/ic_baseline_close_24"
        android:backgroundTint="@android:color/holo_red_dark"
        android:id="@+id/btn4"
        android:layout_gravity="center"
        android:layout_width="200sp"
        android:padding="12sp"
        android:layout_marginTop="12sp"
        app:cornerRadius="22sp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:onClick="eliminar"
        />

</LinearLayout>